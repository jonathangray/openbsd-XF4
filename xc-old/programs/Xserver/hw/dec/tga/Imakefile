#include <Server.tmpl>

SRCS1 = alphaInit.c \
	alphaFbs.c \
	alphaIo.c \
	alphaCursor.c \
	alphaKbd.c \
	alphaMouse.c \
	alphaKeyMap.c

SRCS =	$(SRCS1)

OFILES = alphaInit.o

OBJS =	alphaFbs.o \
	alphaIo.o \
	alphaCursor.o \
	alphaKbd.o \
	alphaMouse.o \
	alphaKeyMap.o

   INCLUDES = -I. -I$(SERVERSRC)/mfb -I$(SERVERSRC)/mi -I$(SERVERSRC)/cfb -I$(SERVERSRC)/mi \
	      -I$(SERVERSRC)/include -I$(SERVERSRC)/os \
	      -I$(XINCLUDESRC) -I$(EXTINCSRC)

NormalLibraryObjectRule()

#define IHaveSubdirs

#ifndef OpenBSDArchitecture
SUBDIRS = tga sfb
#else
SUBDIRS = tga
#endif

all:: $(OFILES)

NormalLibraryTarget(alpha,$(OBJS))
NormalLintTarget($(SRCS1))

DependTarget()
MakeSubdirs($(SUBDIRS))
DependSubdirs($(SUBDIRS))
