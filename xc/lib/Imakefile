#endif

#if BuildXKBuilib
XKBUILIBDIR = xkbui
#endif

#if BuildThreadStubLibrary && BuildLibraries
THRSTUBLIBDIR = XThrStub
#endif

#if BuildXIElib
XIELIBDIR = XIE
#endif

#if BuildPexLib
