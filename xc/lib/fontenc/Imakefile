	      -DFONT_ENCODINGS_DIRECTORY=\"$(FONTDIR)/encodings/encodings.dir\"

    DEFINES = StrcasecmpDefines $(FONTENCDEFS)

       SRCS = fontenc.c encparse.c
       OBJS = fontenc.o encparse.o

    HEADERS = fontenc.h

#define DoNormalLib NormalLibFontEnc
